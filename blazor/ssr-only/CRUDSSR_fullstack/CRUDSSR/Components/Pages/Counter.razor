@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p id="pCounterText">The button hasn't been clicked</p>

<button id="btnCounter" class="btn btn-primary">Click me</button>

<script>
    var counter = 0;
    $('#btnCounter').click(function () {
        $('#pCounterText').text('The count is ' + (++counter));
    });
</script>
