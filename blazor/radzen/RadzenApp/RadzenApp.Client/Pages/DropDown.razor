@page "/dropdown"
@rendermode InteractiveAuto

<RadzenDropDown @bind-Value="selectedOption" Data="@options" Change="@(args => OnChange(args.ToString()))" />

@code {
    public string selectedOption { get; set; } = "Option 1";
    public List<string> options = new List<string> { "Option 1", "Option 2", "Option 3" };

    void OnChange(string value)
    {
        Console.WriteLine(value);
    }
}
