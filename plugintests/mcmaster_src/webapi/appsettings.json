{
  "Serilog": {
    "LevelSwitches": {
      "$consoleSwitch": "Verbose",
      "$fileSwitch": "Verbose",
      "$emailSwitch": "Fatal",
      "$databaseSwitch": "Error"
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "levelSwitches": "$consoleSwitch"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "plugins.log",
          "rollingInterval": "Day",
          "levelSwitches": "$fileSwitch"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
